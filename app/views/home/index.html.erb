<div class="jumbotron text-center">
  <h1>Welcome to my Pinterest Clone</h1>
  <p>Let's get going!</p>

  <% if !user_signed_in? %>
  	<%= link_to 'Login', new_user_session_path, class: 'btn btn-md btn-default' %>
  	<%= link_to 'Join', new_user_registration_path, class: 'btn btn-md btn-primary' %>
  <% else %>
  	<%= link_to 'Logout', destroy_user_session_path, class: 'btn btn-md btn-danger', method: :delete %>
  	<%= link_to 'Edit', edit_user_registration_path, class: 'btn btn-md btn-primary' %>
  	<%= link_to 'List Pins', pins_path, class: 'btn btn-md btn-info' %>
  <% end %>
</div>